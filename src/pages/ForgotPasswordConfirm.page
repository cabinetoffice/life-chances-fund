<apex:page showHeader="false" title="{!$Label.site.forgot_password_confirmation}">
    <apex:define name="body">  
      <center>
        <apex:panelGrid bgcolor="white" columns="1"> 
          <br/>
          <br/>
          <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="1" styleClass="topPanelContainer"> 
            <br/>
            <apex:outputPanel layout="block" styleClass="topPanel">
              <apex:panelGrid width="758" cellpadding="0" cellspacing="0" bgcolor="white" columns="1"> 
                <apex:image url="/servlet/servlet.ImageServer?id=01525000000ApPi&amp;oid=00D250000000Y57&amp;lastMod=1476445341000"/>
                <apex:panelGroup >
                  <br/>
                  <apex:outputText styleClass="title" value="You will receive an automatic email to reset your password in your inbox in a few minutes.
If you don't receive any email from us, it could be because the email address that you had typed in doesn't exist in our system. Only already registered users will be able to reset their passwords. If you need to create an account, please go to our registration page.
If you experience any difficulties in resetting your password, please contact lifechancesfund@cabinetoffice.gov.uk"/>
                  <br/>
                  <br/>
                  <apex:outputLink value="/login" rendered="{!$Site.LoginEnabled}">{!$Label.site.go_to_login_page}</apex:outputLink>
                  <br/>
                </apex:panelGroup>
              </apex:panelGrid> 
             </apex:outputPanel>
          </apex:panelGrid> 
       </apex:panelGrid>
      </center>
      <br/>
    </apex:define>
</apex:page>