<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="SIB_ApplicationListController" action="{!checkLoggedInStatus}">
	<style>
		td{
			padding-top : 10px;
		}
		table {
		  border-collapse: collapse;
		}
	</style>
	<apex:composition template="SIB_Template">
		<apex:define name="body">
			<apex:form id="form">
				<apex:pageBlock >
                	<h1 class="heading-xlarge" style="padding-top:10px;">Start a new application</h1>
					<apex:outputText value="{!$Label.SIB_Landing_Page_Help_Text}" escape="false"/>
					<apex:pageBlockButtons location="bottom">
						<apex:commandButton action="{!startApplication}" styleClass="button" value="Start"/>
					</apex:pageBlockButtons>
				</apex:pageBlock>
				<apex:pageBlock >
                	<h1 class="heading-xlarge" style="padding-top:10px;">Your applications</h1>
                	<table width="100%">
                		<tr width="100%">
                			<td width="30%"> <b> Theme </b></td>
                			<td width="50%"> <b>Stage of application </b></td>
            			</tr>
            			<apex:repeat value="{!applications}" var="app">
            				<tr>
            					<td class="tableRowHead"> {!app.Theme__c} </td>
            					<td class="tableRowHead"> <apex:outputLink value="/sib_applicationForm?id={!app.Id}&formType=Expression%20Of%20Interest" styleClass="sectionlink"> Expression of interest </apex:outputLink></td>
            					<td class="tableRowHead" width="20%"> <apex:outputText styleClass="status" value="{!app.EOI_External_Status__c}"/> </td>
    						</tr>
    						<tr>
            					<td/>
            					<td class="tableRowHead"> <apex:outputLink value="/sib_applicationForm?id={!app.Id}&formType=Development%20Form" styleClass="sectionlink"> Development Form</apex:outputLink> </td>
            					<td class="tableRowHead" width="20%"> <apex:outputText rendered="{!app.Dev_Form_External_Status__c != '' && app.Dev_Form_External_Status__c != null}" styleClass="status" value="{!app.Dev_Form_External_Status__c}"/> </td>
        					</tr>
        					<tr>
            					<td/>
            					<td class="tableRowHead"> Full application </td>
            					<td class="tableRowHead"/>
        					</tr>
						</apex:repeat>
							<tr>
								<td class="tableRowHead"/>
								<td class="tableRowHead"/>
								<td class="tableRowHead"/>
							</tr> 
					</table>
				</apex:pageBlock>
			</apex:form>
		</apex:define>
	</apex:composition>
</apex:page>