<apex:page showHeader="false" sidebar="false" standardStylesheets="false" controller="SIB_LandingController" action="{!checkLoggedInStatus}">
	<apex:composition template="SIB_Template">
		<apex:define name="body">
			<apex:form id="form">
				<apex:pageBlock >
                	<h1 class="heading-xlarge" style="padding-top:10px;">Start a new application</h1>
					<apex:outputText value="{!$Label.SIB_Landing_Page_Help_Text}" escape="false"/>
		            <apex:pageBlockButtons location="bottom">
						<apex:commandButton action="{!goToApplicationList}" styleClass="button" value="Start >"/>
					</apex:pageBlockButtons>
				</apex:pageBlock>
			</apex:form>
		</apex:define>
	</apex:composition>
</apex:page>